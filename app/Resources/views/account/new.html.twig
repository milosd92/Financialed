{% extends '::base.html.twig' %}

{% block content %}
    <div class="page-title">
        <div class="title_left">
            <h3>New account</h3>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Form: New account</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <form id="form-new-account" class="form-horizontal form-label-left">
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="account_name">Account name</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" id="account_name" name="account_name" class="form-control col-md-7 col-xs-12">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="account_name">Currency</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <select id="account_name" name="account_name" class="form-control">
                                    <option>RSD (Serbia)</option>
                                    <option>EUR (EU)</option>
                                    <option>USD (United States)</option>
                                    <option>AUD (Australia)</option>
                                    <option>CAD (Canada)</option>
                                    <option>DKK (Denmark)</option>
                                    <option>JPY (Japan)</option>
                                    <option>NOK (Norway)</option>
                                    <option>RUB (Russian Federation)</option>
                                    <option>SEK (Sweden)</option>
                                    <option>CHF (Switzerland)</option>
                                    <option>GBP (Great Britain)</option>
                                </select>
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <button type="submit" class="btn btn-success">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}